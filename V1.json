{
  "openapi": "3.0.0",
  "info": {
    "title": "Ecwid Store API",
    "version": "1.0.2",
    "description": "API integration for Ecwid store to manage orders and products via Tawk.to AI Assist.",
    "x-api-scopes": [
      "update_catalog",
      "public_storefront",
      "read_catalog",
      "update_orders",
      "create_catalog",
      "read_store_profile",
      "read_orders"
    ]
  },
  "servers": [
    {
      "url": "https://app.ecwid.com/api/v3/88317525",
      "description": "Ecwid API Base URL"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Ecwid API access token"
      }
    },
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "Order ID" },
          "email": { "type": "string", "description": "Customer email" },
          "total": { "type": "number", "format": "float", "description": "Total cost" },
          "created": { "type": "string", "format": "date-time", "description": "Order creation time" },
          "status": { "type": "string", "description": "Order payment status" },
          "fulfillmentStatus": { "type": "string", "description": "Order fulfillment status (e.g. SHIPPED, DELIVERED)" },
          "trackingNumber": { "type": "string", "description": "Tracking number if shipped" },
          "shippingMethod": { "type": "string", "description": "Shipping method used" }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "Product ID" },
          "name": { "type": "string", "description": "Product name" },
          "sku": { "type": "string", "description": "Stock Keeping Unit" },
          "price": { "type": "number", "format": "float", "description": "Product price" },
          "url": { "type": "string", "description": "Product URL" },
          "description": { "type": "string", "description": "Product description" },
          "quantity": { "type": "integer", "description": "Available stock" },
          "inStock": { "type": "boolean", "description": "Whether product is in stock" }
        }
      }
    }
  },
  "paths": {
    "/products": {
      "get": {
        "summary": "Search for products by name or SKU",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "Search keyword (product name or SKU)"
          }
        ],
        "responses": {
          "200": {
            "description": "List of matching products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Product" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized - invalid token" },
          "404": { "description": "No matching products found" }
        }
      }
    },
    "/orders": {
      "get": {
        "summary": "Search orders by filters like email or status",
        "operationId": "searchOrders",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Customer email address"
          },
          {
            "name": "createdFrom",
            "in": "query",
            "schema": { "type": "string", "format": "date-time" },
            "description": "Filter orders created after this date"
          },
          {
            "name": "createdTo",
            "in": "query",
            "schema": { "type": "string", "format": "date-time" },
            "description": "Filter orders created before this date"
          },
          {
            "name": "fulfillmentStatus",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["AWAITING_PROCESSING", "PROCESSING", "SHIPPED", "DELIVERED", "RETURNED"]
            },
            "description": "Filter by fulfillment status"
          }
        ],
        "responses": {
          "200": {
            "description": "Matching orders returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Order" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized - invalid token" }
        }
      }
    }
  }
}

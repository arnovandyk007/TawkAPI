{
  "openapi": "3.0.0",
  "info": {
    "title": "Ecwid Store API",
    "version": "1.2.0",
    "description": "API integration for Ecwid store to manage products and orders, including stock, prices, shipment tracking, and order statuses. Designed for Tawk.to AI Assist and backend integrations."
  },
  "servers": [
    {
      "url": "https://app.ecwid.com/api/v3/88317525",
      "description": "Ecwid API Base URL",
      "variables": {
        "storeId": {
          "description": "Your Ecwid store ID",
          "default": "88317525"
        }
      }
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Ecwid API access token"
      }
    },
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Product ID"
          },
          "name": {
            "type": "string",
            "description": "Product name"
          },
          "sku": {
            "type": "string",
            "description": "Stock Keeping Unit"
          },
          "price": {
            "type": "number",
            "format": "float",
            "description": "Product price"
          },
          "description": {
            "type": "string",
            "description": "Product description (HTML supported)"
          },
          "url": {
            "type": "string",
            "description": "Product storefront URL"
          },
          "quantity": {
            "type": "integer",
            "description": "Available stock quantity"
          },
          "imageUrl": {
            "type": "string",
            "description": "Primary product image URL"
          },
          "category": {
            "type": "string",
            "description": "Product category name"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Order ID"
          },
          "email": {
            "type": "string",
            "description": "Customer's email address"
          },
          "total": {
            "type": "number",
            "format": "float",
            "description": "Total order amount"
          },
          "created": {
            "type": "string",
            "format": "date-time",
            "description": "Order creation timestamp"
          },
          "paymentStatus": {
            "type": "string",
            "description": "Payment status (e.g. PAID, AWAITING_PAYMENT, CANCELLED)"
          },
          "fulfillmentStatus": {
            "type": "string",
            "description": "Fulfillment status (e.g. AWAITING_PROCESSING, PROCESSING, SHIPPED, DELIVERED)"
          },
          "shippingMethod": {
            "type": "string",
            "description": "Selected shipping method"
          },
          "shippingPerson": {
            "type": "object",
            "description": "Recipient shipping details",
            "properties": {
              "name": { "type": "string" },
              "street": { "type": "string" },
              "city": { "type": "string" },
              "countryCode": { "type": "string" },
              "postalCode": { "type": "string" },
              "phone": { "type": "string" }
            }
          },
          "shipments": {
            "type": "array",
            "description": "Shipment tracking details",
            "items": {
              "type": "object",
              "properties": {
                "trackingNumber": {
                  "type": "string",
                  "description": "Courier tracking number"
                },
                "shippingCompany": {
                  "type": "string",
                  "description": "Courier company name"
                },
                "status": {
                  "type": "string",
                  "description": "Shipment status (e.g. shipped, in transit, delivered)"
                },
                "dateShipped": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Date the package was shipped"
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Search Products",
        "operationId": "searchProducts",
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "description": "Search by product name, SKU, or description keywords",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "sku",
            "in": "query",
            "description": "Filter by SKU",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Pagination offset",
            "required": false,
            "schema": { "type": "integer", "default": 0 }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of products to return",
            "required": false,
            "schema": { "type": "integer", "default": 10 }
          }
        ],
        "responses": {
          "200": {
            "description": "List of matching products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Product" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "summary": "Get Product Details",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Product details by ID",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Product" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Product not found" }
        }
      }
    },
    "/orders": {
      "get": {
        "summary": "Search Orders",
        "operationId": "searchOrders",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "Filter by customer email",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "createdFrom",
            "in": "query",
            "description": "Filter orders from this date (ISO 8601)",
            "required": false,
            "schema": { "type": "string", "format": "date-time" }
          },
          {
            "name": "createdTo",
            "in": "query",
            "description": "Filter orders until this date (ISO 8601)",
            "required": false,
            "schema": { "type": "string", "format": "date-time" }
          },
          {
            "name": "fulfillmentStatus",
            "in": "query",
            "description": "Filter by order status",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "AWAITING_PROCESSING",
                "PROCESSING",
                "SHIPPED",
                "DELIVERED",
                "RETURNED"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Order" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "429": { "description": "Rate limit exceeded" }
        }
      }
    },
    "/orders/{orderId}": {
      "get": {
        "summary": "Get Single Order",
        "operationId": "getOrder",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "description": "Unique order ID",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Detailed order information including tracking and shipment status",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Order" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Order not found" }
        }
      }
    }
  }
}

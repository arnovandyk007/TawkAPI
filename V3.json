{
  "openapi": "3.0.0",
  "info": {
    "title": "Ecwid Store API",
    "version": "1.0.1",
    "description": "API integration for Ecwid store to manage orders and products via Tawk.to AI Assist.",
    "x-api-scopes": [
      "update_catalog",
      "public_storefront",
      "read_catalog",
      "update_orders",
      "create_catalog",
      "read_store_profile",
      "read_orders"
    ]
  },
  "servers": [
    {
      "url": "https://app.ecwid.com/api/v3/88317525",
      "description": "Ecwid API Base URL"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Ecwid API access token with scopes: update_catalog, public_storefront, read_catalog, update_orders, create_catalog, read_store_profile, read_orders"
      }
    },
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Order ID"
          },
          "email": {
            "type": "string",
            "description": "Customer's email address"
          },
          "total": {
            "type": "number",
            "format": "float",
            "description": "Total order cost"
          },
          "created": {
            "type": "string",
            "format": "date-time",
            "description": "Order creation timestamp"
          },
          "status": {
            "type": "string",
            "description": "Order status"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Product ID"
          },
          "name": {
            "type": "string",
            "description": "Product name"
          },
          "sku": {
            "type": "string",
            "description": "Stock Keeping Unit"
          },
          "price": {
            "type": "number",
            "format": "float",
            "description": "Product price"
          },
          "description": {
            "type": "string",
            "description": "Product description"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/orders": {
      "get": {
        "summary": "Search Orders",
        "operationId": "searchOrders",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "Customer's email address",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "createdFrom",
            "in": "query",
            "description": "Order placement start datetime",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "createdTo",
            "in": "query",
            "description": "Order placement end datetime",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "fulfillmentStatus",
            "in": "query",
            "description": "Order fulfillment status",
            "schema": {
              "type": "string",
              "enum": ["AWAITING_PROCESSING", "PROCESSING", "SHIPPED", "DELIVERED", "RETURNED"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of orders matching the search criteria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Order"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid or missing token"
          },
          "429": {
            "description": "Rate limit exceeded"
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "summary": "Get Product Details",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the product to fetch"
          }
        ],
        "responses": {
          "200": {
            "description": "Product details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid or missing token"
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    }
  }
}
